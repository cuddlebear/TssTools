<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <span class="brand">Url list</span>
    <ul class="nav pull-right">
      <li><%= link_to "Add Url", new_url_path(domain_id: @domain.id) %></li>
    </ul>
  </div>
</div>

<table class="table table-striped table-hover">
  <tr>
    <th>Url</th>
    <th>Actions</th>
  </tr>
  <% @domain.urls.each do |url|%>

      <tr>
        <td><%= link_to url.path, "http://" + url.path, target: "_blank"  %></td>
        <td>
          <%=  link_to "Show", url, class: "btn btn-primary btn-small" %>
          <%=  link_to "Edit", edit_url_path(url), class: "btn btn-small" %>
          <%=  link_to "Delete", url_path(url), method: :delete,  data: { confirm: 'Are you sure?' },  class: "btn btn-danger btn-small"%>
        </td>
      </tr>
  <%end%>
</table>

