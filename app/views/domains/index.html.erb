<%= render ("shared/show_notice_or_warning") %>
<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <span class="brand">Domains</span>
  </div>
</div>

<p>
<%= link_to "Create domain", new_domain_path, class: "btn btn-primary" %>
</p>

<table class="table table-striped table-hover">
  <tr>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>Name</th>
    <th>Url</th>
    <th>Actions</th>
  </tr>
<% @domains.each do |domain|%>
  <tr>
    <td><% unless domain.active %><i class="icon-ban-circle" title="Inactive"></i><% end %></td>
    <td><%= status_badge(domain.status) %></td>
    <td><%= domain.name%></td>
    <td><%= link_to domain.domain, domain.scheme + "://" + domain.domain, target: "_blank"  %></td>
    <td>
      <%=  link_to "Show", domain, class: "btn btn-primary btn-small" %>
      <%=  link_to "Edit", edit_domain_path(domain), class: "btn btn-small" %>
      <%=  link_to "Delete", domain_path(domain), method: :delete,  data: { confirm: 'Are you sure?' },  class: "btn btn-danger btn-small"%>
    </td>
  </tr>
<%end%>
</table>
<%= paginate @domains %>

